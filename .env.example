# ============================================
# AI Product Factory - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=n8n

# ============================================
# n8n Configuration
# ============================================
N8N_ENCRYPTION_KEY=your_32_character_encryption_key
DOMAIN_NAME=c3po.etrox.de
TIMEZONE=Europe/Berlin

# ============================================
# Traefik & SSL
# ============================================
ACME_EMAIL=admin@yourdomain.com

# ============================================
# Vector Database (Qdrant)
# ============================================
QDRANT_API_KEY=your_qdrant_api_key

# ============================================
# Knowledge Graph (Graphiti)
# ============================================
# Uses internal URL: http://graphiti:8080
OPENAI_API_KEY=your_openai_api_key

# ============================================
# SeaweedFS (S3-Compatible Storage)
# ============================================
S3_ACCESS_KEY=admin
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=product-factory-artifacts
# Internal endpoint (for containers)
S3_ENDPOINT=http://seaweedfs:8888
# Public endpoint (for browser access)
S3_PUBLIC_ENDPOINT=https://s3.${DOMAIN_NAME}

# ============================================
# Dashboard Authentication (Google OAuth)
# ============================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_random_32_char_secret
# Comma-separated list of allowed email domains
ALLOWED_EMAIL_DOMAINS=yourdomain.com

# ============================================
# AI Product Factory Configuration
# ============================================
FACTORY_MAX_ITERATIONS=5
FACTORY_SCORE_THRESHOLD=90
FACTORY_BATCH_SIZE=3
FACTORY_CONFIRMATION_TIMEOUT=3600

# Memory Configuration (messages per agent)
TITAN_MEMORY_CREATOR=8
TITAN_MEMORY_CRITIC=6
TITAN_MEMORY_REFINER=10

# ============================================
# Model Selection (via OpenRouter)
# ============================================
MODEL_ARCHITECT=anthropic/claude-sonnet-3.5
MODEL_CRITIC=openai/gpt-4o
MODEL_REFINER=anthropic/claude-sonnet-3.5
MODEL_CONTEXT=google/gemini-1.5-pro
MODEL_RESEARCH=perplexity/sonar-pro

# ============================================
# Titan Workflow Configuration
# ============================================
TITAN_MAX_ITERATIONS=5
TITAN_SCORE_THRESHOLD=9.0
TITAN_BATCH_SIZE=3
TITAN_AGENT_TIMEOUT=120000
TITAN_HTTP_TIMEOUT=60000
TITAN_CONFIRMATION_TIMEOUT=86400
